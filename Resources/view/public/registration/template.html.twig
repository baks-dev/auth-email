{% extends Template('user/base.html.twig') %}

{% block title %}{{ 'page'|trans }}{% endblock %}

{# ---- КОНТЕНТ-БЛОК ------------------------------------------------------------ #}
{% block content %}
    {{ include(_self|replace({ "template.html.twig" : baks_settings.device~"/content.html.twig" })) }}
{% endblock %}



 {% block javascript %}
 <script nonce='{{ csp_nonce() }}' async data-src='/assets/{{ version }}/js/password.meter.js?v={{ version }}'
             class='lazy'></script>
     {% if CAPTCHA is defined %}
         <script nonce="{{ csp_nonce() }}" class="lazy" type="module"
